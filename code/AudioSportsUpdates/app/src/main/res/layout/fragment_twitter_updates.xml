<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ui.twitter.TwitterUpdatesFragment">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/basketballPlay"
        style="@style/Widget.MaterialComponents.Button.Icon"
        android:layout_width="201dp"
        android:layout_height="42dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/reg_btn_style"
        android:backgroundTint="#FD597A"
        android:text="Basketball"
        android:textColor="#ffffff"
        app:cornerRadius="24dp"
        app:icon="@drawable/ic_play_circle_outline_black_24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/soccerPlay" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/boxinPlay"
        style="@style/Widget.MaterialComponents.Button.Icon"
        android:layout_width="201dp"
        android:layout_height="42dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/reg_btn_style"
        android:backgroundTint="#FD597A"
        android:text="Boxing"
        android:textAllCaps="true"
        android:textColor="#ffffff"
        app:cornerRadius="24dp"
        app:icon="@drawable/ic_play_circle_outline_black_24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cyclingPlay" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/audioupdaterPlay"
        style="@style/Widget.MaterialComponents.Button.Icon"
        android:layout_width="201dp"
        android:layout_height="42dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/reg_btn_style"
        android:backgroundTint="#FD597A"
        android:text="AudioSportUpdates"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        app:cornerRadius="24dp"
        app:icon="@drawable/ic_play_circle_outline_black_24dp"
        app:layout_constraintBottom_toTopOf="@+id/guideline4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/boxinPlay"
        app:layout_constraintVertical_bias="0.166" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/cyclingPlay"
        style="@style/Widget.MaterialComponents.Button.Icon"
        android:layout_width="201dp"
        android:layout_height="42dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/reg_btn_style"
        android:backgroundTint="#FD597A"
        android:text="Cycling"
        android:textAllCaps="true"
        android:textColor="#ffffff"
        app:cornerRadius="24dp"
        app:icon="@drawable/ic_play_circle_outline_black_24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/f1Play" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/soccerPlay"
        style="@style/Widget.MaterialComponents.Button.Icon"
        android:layout_width="201dp"
        android:layout_height="42dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/reg_btn_style"
        android:backgroundTint="#FD597A"
        android:text="Soccer"
        android:textColor="#ffffff"
        app:cornerRadius="24dp"
        app:icon="@drawable/ic_play_circle_outline_black_24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline6" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/f1Play"
        style="@style/Widget.MaterialComponents.Button.Icon"
        android:layout_width="201dp"
        android:layout_height="42dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/reg_btn_style"
        android:backgroundTint="#FD597A"
        android:text="F1 racing"
        android:textColor="#ffffff"
        app:cornerRadius="24dp"
        app:icon="@drawable/ic_play_circle_outline_black_24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/basketballPlay" />

    <TextView
        android:id="@+id/journalistInfo"
        android:layout_width="376dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="       Start listening to updates for your favorite sport!"
        android:textAllCaps="false"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toTopOf="@+id/divider4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/findTwitter"
        android:layout_width="170dp"
        android:layout_height="54dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/register_edittext_style"
        android:ems="10"
        android:hint="Username"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/guideline5"
        app:layout_constraintEnd_toStartOf="@+id/followUser"
        app:layout_constraintHorizontal_bias="0.511"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline4"
        app:layout_constraintVertical_bias="0.292" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/followUser"
        style="@style/Widget.MaterialComponents.Button.Icon"
        android:layout_width="170dp"
        android:layout_height="54dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/reg_btn_style"
        android:backgroundTint="#FD597A"
        android:text="Follow.."
        android:textColor="#ffffff"
        app:cornerRadius="24dp"
        app:icon="@drawable/ic_play_circle_outline_black_24dp"
        app:layout_constraintBottom_toTopOf="@+id/guideline5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline4"
        app:layout_constraintVertical_bias="0.282" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="445dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="664dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="84dp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:text="Tune into any reporter here"
        app:layout_constraintBottom_toTopOf="@+id/guideline5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.565"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline4"
        app:layout_constraintVertical_bias="0.097" />

    <View
        android:id="@+id/divider3"
        android:layout_width="395dp"
        android:layout_height="10dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintBottom_toTopOf="@+id/guideline4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/audioupdaterPlay" />

    <View
        android:id="@+id/divider4"
        android:layout_width="395dp"
        android:layout_height="10dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintBottom_toTopOf="@+id/soccerPlay"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/journalistInfo" />

</androidx.constraintlayout.widget.ConstraintLayout>